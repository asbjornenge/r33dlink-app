.Read
    flex auto
    display flex
    flex-direction column

    .Text
        flex auto
        display flex
        overflow-y scroll
        -webkit-overflow-scrolling touch
        padding-left 1.2em
        padding-right 1.2em
        padding-bottom 1.2em
        @media (max-width: 670px) {
          padding-left 10px
          padding-right 10px
          padding-bottom 10px
        }

        .Sentence
          font-size 1.2em
          @media (max-width: 670px) {
            font-size 1em
          }
          &.highlight
            background-color lighten(#fa5225, 60%)
